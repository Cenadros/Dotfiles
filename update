#!/usr/bin/env bash

set -euo pipefail

echo "ðŸš€ Updating Dotfiles"
echo "-------------------------------------------------"
echo
echo "ðŸ‘‰  Updating dotfiles repository..."
pushd ${HOME}/.dotfiles
git pull
popd

echo "ðŸ‘‰  Updating prezto repository..."
pushd ${HOME}/.zprezto
git pull && git submodule update --init --recursive
popd

echo "ðŸ‘‰  Updating nvm repository..."
pushd ${HOME}/.nvm
git fetch --tags origin && git checkout `git describe --abbrev=0 --tags --match "v[0-9]*" $(git rev-list --tags --max-count=1)`
popd

"$HOME/.dotfiles/symlinks" self install
